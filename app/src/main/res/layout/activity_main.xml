<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="6"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="portfolio.nanodegree.ricardo.com.appportfolioandroidnanodegree.MainActivity">


    <Button
        android:id="@+id/button1"
        style="@style/udacitybutton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:text="Filmes populares" />

    <Button
        android:id="@+id/button2"
        style="@style/udacitybutton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:text="Stock Hawk" />

    <Button
        android:id="@+id/button3"
        style="@style/udacitybutton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:text="Faça-o maior" />

    <Button
        android:id="@+id/button4"
        style="@style/udacitybutton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:text="Faça seu aplicativo com Material" />

    <Button
        android:id="@+id/button5"
        style="@style/udacitybutton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:text="Seja onipresente" />

    <Button
        android:id="@+id/button6"
        style="@style/udacitybutton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:text="Capstone" />
</LinearLayout>
